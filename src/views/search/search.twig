{% set base_path = "http://" ~ app.request.host %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>FansWorld TV - Share your passion.</title>

    <!-- Bootstrap core LESS -->
    <link rel="stylesheet/less" type="text/css" href="{{base_path}}{{app.assets_path}}/less/kernel.less"/>
    <script src="{{base_path}}{{app.assets_path}}/js/lessc.js" type="text/javascript"></script>
</head>

<body>
<header>
    <nav class="wrapper">
        <figure class="logo">
            <a href="{{base_path}}"> 
                <img src="{{base_path}}{{app.assets_path}}/fwtv_logo_header.png" alt="FansWorld TV"/>
            </a>
        </figure>
        <div class="actions pull-right">
            <button class="btn-fw bg-transparent btn-upload">Subir</button>
            <span class="search-input">
                <input type="text" id="inputSearch" placeholder="Buscar un contenido..."/>
                <i class="glyphicon glyphicon-search"></i>
            </span>
            <button class="btn-fw bg-brown btn-login">Entrar</button>
        </div>
    </nav>
</header>
<div class="site-content-container">
    <div class="jumbotron">
        <div class="wrapper">

            <div class="social-connect black-overlay">
                <ul class="how-to-connect clearfix">
                    <li>
                        <button class="connect-with fb"><i class="fw-icons fb"></i>usando Facebook</button>
                    </li>
                    <li>
                        <button class="connect-with tw"><i class="fw-icons tw"></i>usando Twitter</button>
                    </li>
                    <li>
                        <button class="connect-with fw"><i class="fw-icons fw"></i>crear tu cuenta</button>
                    </li>
                </ul>
                <p class="terms-explanation">Revisa nuestros <a href="">Términos y Condiciones</a>, nada de lo que digan
                    hará que dejes de ser fanático.</p>
            </div>

            {% if videos %}
                {% for video in videos %}
                    <a href="{{base_path}}/video/detail/{{video.obj._id}}">
                        <img src="{{app.kaltura_cdn}}/{{video.obj.kalturaid}}/width/200"/>
                    </a>   
                {% endfor %}
            {% else %}
                <p> Sin resultados </p>
            {% endif %}

        </div>
    </div>
    
</div>

<!-- Bootstrap core JavaScript
================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<script src="{{base_path}}{{app.assets_path}}/js/jquery.js"></script>
<script src="{{base_path}}{{app.assets_path}}/js/bootstrap.min.js"></script>

<!-- Busqueda -->
<script type="text/javascript">
    $('#inputSearch').keypress(function(e) {
        if(e.which == 13) {
            if ((query = $('#inputSearch').val()) != "") {
                window.location.href = "{{base_path}}/video/search/" + query;
            }
        }
    });
</script>

</body>
</html>